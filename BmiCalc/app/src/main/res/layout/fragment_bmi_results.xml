<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment_bmi_results">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingTop="24sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bmiResults_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12sp"
                android:text="@string/bmiresults_title"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bmiResults_bmi_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/bmiResults_category_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bmiResults_energy_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12sp"
                android:text="@string/bmiresults_energy_title"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bmiResults_energy_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/bmiResults_energy_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bmiresults_energy_unit"
                android:textAlignment="center"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="16sp">

        <TextView
            android:id="@+id/bmiResults_recipe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text="@string/bmiresults_recipe_title"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/bmiResults_recipe_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30sp"
            android:paddingRight="30sp" />
    </LinearLayout>

</LinearLayout>